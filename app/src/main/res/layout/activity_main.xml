<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blanche"
    tools:context="com.example.android.a10thplanetcard.MainActivity">

    <ImageView
        android:id="@+id/planet10thlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleX="1.7"
        android:scaleY="1"
        android:src="@drawable/dsu1" />


    <TextView
        android:id="@+id/planetInfo"
        android:layout_below="@id/planet10thlogo"
        android:text="@string/coach"
        android:layout_marginTop="@dimen/seize"
        android:layout_marginLeft="@dimen/seize"
        android:textSize="@dimen/text20"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />

    <TextView
        android:id="@+id/planet10Name"
        android:layout_below="@id/planetInfo"
        android:layout_marginLeft="@dimen/seize"
        android:layout_marginTop="@dimen/seize"
        android:textSize="@dimen/text20"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/planet10"/>

    <TextView
        android:id="@+id/info"
        android:layout_below="@id/planet10Name"
        android:layout_marginTop="@dimen/quatre"
        android:layout_marginLeft="@dimen/dixsept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info"/>

    <TextView
        android:id="@+id/contact"
        android:layout_below="@id/info"
        android:layout_marginTop="@dimen/huit"
        android:layout_marginLeft="@dimen/dixsept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact"/>

    <ImageView
        android:id="@+id/mmaGym"
        android:layout_marginTop="@dimen/huit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_width="@dimen/buck5"
        android:layout_height="@dimen/eighty"
        android:layout_marginBottom="@dimen/trente"
        android:src="@drawable/mmagym2"
        android:layout_marginLeft="@dimen/seize"/>

    <ImageView
        android:id="@+id/scott10th"
        android:src="@drawable/scott10"
        android:layout_width="@dimen/buck5"
        android:layout_height="@dimen/buck5"
        android:layout_marginBottom="@dimen/nega"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>


</RelativeLayout>
